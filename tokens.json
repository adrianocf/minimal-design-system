{
  "global": {
    "font-size": {
      "base": {
        "value": "16",
        "type": "fontSizes"
      },
      "lg": {
        "value": "{font-size.base} * 1.25",
        "type": "fontSizes"
      },
      "xl": {
        "value": "{font-size.base} * 1.75",
        "type": "fontSizes"
      },
      "2xl": {
        "value": "{font-size.base} * 2.25",
        "type": "fontSizes"
      },
      "3xl": {
        "value": "{font-size.base} * 2.75",
        "type": "fontSizes"
      },
      "4xl": {
        "value": "{font-size.base} * 3.25",
        "type": "fontSizes"
      },
      "sm": {
        "value": "{font-size.base} * 0.90",
        "type": "fontSizes"
      },
      "xs": {
        "value": "{font-size.base} * 0.75",
        "type": "fontSizes"
      }
    },
    "font-family": {
      "body": {
        "value": "Roboto",
        "type": "fontFamilies"
      },
      "heading": {
        "value": "Inter",
        "type": "fontFamilies"
      }
    },
    "font-weight": {
      "regular": {
        "value": "Regular",
        "type": "fontWeights"
      },
      "bold": {
        "value": "Bold",
        "type": "fontWeights"
      }
    },
    "line-height": {
      "lg": {
        "value": "160%",
        "type": "lineHeights"
      },
      "md": {
        "value": "Auto",
        "type": "lineHeights"
      },
      "sm": {
        "value": "120%",
        "type": "lineHeights"
      },
      "xs": {
        "value": "100%",
        "type": "lineHeights"
      },
      "2xs": {
        "value": "80%",
        "type": "lineHeights"
      }
    },
    "p-spacing": {
      "sm": {
        "value": "0.5em",
        "type": "paragraphSpacing"
      },
      "md": {
        "value": "1em",
        "type": "paragraphSpacing"
      },
      "lg": {
        "value": "2em",
        "type": "paragraphSpacing"
      }
    },
    "l-spacing": {
      "base": {
        "value": "0%",
        "type": "letterSpacing"
      },
      "lg": {
        "value": "10%",
        "type": "letterSpacing"
      },
      "sm": {
        "value": "-3%",
        "type": "letterSpacing"
      }
    },
    "size": {
      "sm": {
        "value": "16",
        "type": "sizing"
      },
      "md": {
        "value": "$size.sm * 2",
        "type": "sizing"
      },
      "lg": {
        "value": "{size.md} * 2",
        "type": "sizing"
      }
    },
    "space": {
      "sm": {
        "value": "8",
        "type": "spacing"
      },
      "md": {
        "value": "$space.sm * 2",
        "type": "spacing"
      },
      "lg": {
        "value": "$space.md * 2",
        "type": "spacing"
      },
      "xl": {
        "value": "$space.lg * 2",
        "type": "spacing"
      }
    },
    "h1": {
      "bold": {
        "value": {
          "fontFamily": "{font-family.heading}",
          "fontWeight": "{font-weight.bold}",
          "lineHeight": "{line-height.xs}",
          "fontSize": "{font-size.4xl}",
          "letterSpacing": "{l-spacing.sm}",
          "paragraphSpacing": "{p-spacing.xs}",
          "textDecoration": "none",
          "textCase": "none"
        },
        "type": "typography",
        "description": "Heading 1 / Bold"
      }
    },
    "p": {
      "regular": {
        "value": {
          "fontFamily": "{font-family.body}",
          "fontWeight": "{font-weight.regular}",
          "lineHeight": "{line-height.lg}",
          "fontSize": "{font-size.base}",
          "letterSpacing": "{l-spacing.base}",
          "paragraphSpacing": "{p-spacing.sm}",
          "textDecoration": "none",
          "textCase": "none"
        },
        "type": "typography"
      }
    }
  }
}